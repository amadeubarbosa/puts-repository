SUNOS64_TECMAKE_FLAGS="USE_NODEPEND=YES TEC_UNAME=SunOS510_64 BUILD_64=YES"

name = "openbus-busservice"
version = "2.1.0snapshot"
url = GITREPURL.."/openbus/openbus-core.git;branch=OPENBUS-3102"
dependencies = {
  "lua-bin == 5.2.2",
  "luuid == 1.0snapshot",
  "luastruct == 1.2snapshot",
  "luasocket == 2.0.2snapshot",
  "luasec == 0.5snapshot",
  "lce == 2.0snapshot",
  "luafilesystem == 1.4.2snapshot",
  "luavararg == 1.1snapshot",
  "luatuple == 1.0snapshot",
  "loop == 3.0snapshot",
  "luacothread == 1.0snapshot",
  "luaidl == 0.7snapshot",
  "sqlite == 3.7.16.2",
  "lsqlite3 == 0.9.1snapshot",
  "oil == 0.7snapshot",
  "luaiconv == 7snapshot",
  "scs-idl1.2 == 1.2.1",
  "scs-lua == 1.2.3snapshot",
  "openbus-idl2.0 == 2.0snapshot",
  "openbus-idl2.1 == 2.1snapshot",
  "openbus-lua == 2.1.0snapshot",
  "openbus-audit-agent == 1.0snapshot",
  "lualdap == 1.1.0snapshot",
} 

local vars = {
  LUA52 = "%directory(lua-bin)%",
  USE_LUA52 = "YES",
  OPENBUS_HOME = INSTALL.TOP, -- required by '.mak' when USE_STATIC
}
for _, dep in ipairs(dependencies) do
  local name = assert(dep:match("^([^=]-)%s=="))
  vars[name:upper():gsub("[^%w]", "_").."_HOME"] = "%directory("..name..")%"
end

build = {
  type = "tecmake",
  variables = vars,
  mf = { "busservices USE_STATIC=YES" },
  SunOS510_64 = { mf = { "busservices USE_STATIC=YES "..SUNOS64_TECMAKE_FLAGS } },
}
install_files = {
  ["../bin/${TEC_UNAME}/busservices"] = "bin",
  ["../shell/businit"] = "bin",
  ["../shell/buscheck"] = "bin",
  ["../shell/openbus.rc"] = "config",
  ["../shell/openbus.cfg"] = "config",
}
dev_files = {
  ["../test/*"] = "test",
  ["../idl/*.idl"] = "idl/adm", -- for tests only
}

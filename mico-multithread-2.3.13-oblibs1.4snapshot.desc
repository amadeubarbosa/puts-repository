name = "mico-multithread"
version = "2.3.13-oblibs1.4snapshot"
url = SVNREPURL .. "/openbus/libs/trunk/mico-2.3.13"
build = {
  type = "autotools",
  variables = {
    ["--prefix"] = TMPDIR,
  },
  configure = "./configure --disable-ssl --disable-elf",
}
build.SunOS = { configure = 'CC=cc CXX=CC CONF_AR=CC CONF_ARFLAGS="-xar -o" CFLAGS="-KPIC" CXXFLAGS="-erroff=badargtype2w -library=stlport4 -KPIC " '..build.configure }
build.SunOS510_64 = { configure = 'CC=cc CXX=CC CONF_AR=CC CONF_ARFLAGS="-m64 -xar -o" CFLAGS="-KPIC -m64" CXXFLAGS="-erroff=badargtype2w -library=stlport4 -KPIC -m64" LDFLAGS="-m64" '..build.configure }

install_files = {
  [TMPDIR .."/lib/libmico*.so*"] = "lib/mico-2.3.13-multithread",     --dynamic linux,aix,sunos
  [TMPDIR .."/lib/libmico*.dylib*"] = "lib/mico-2.3.13-multithread",  --dynamic macos
  [TMPDIR .."/bin/*"] = "bin/mico-2.3.13-multithread",
}
dev_files = {
  [TMPDIR .."/lib/libmico*.*"] = "lib/mico-2.3.13-multithread",       --dynamic linux,aix,sunos
  [TMPDIR .."/bin/*"] = "bin/mico-2.3.13-multithread",
  [TMPDIR .."/include/*"] = "include/mico-2.3.13-multithread",
  [SVNDIR.."/specs/shell/mico-setup-multithread*"] = "specs/shell/",
}
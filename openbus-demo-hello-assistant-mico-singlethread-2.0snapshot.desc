name = "openbus-demo-hello-assistant-mico-singlethread"
version = "2.0snapshot"
subpackage_of = "openbus-cpp-mico-singlethread == "..version
dependencies = {
  "openbus-cpp-mico-singlethread == "..version,
  "boost == 1.51.0",
  "boost-program-options == 1.51.0",
  "boost-system == 1.51.0",
  "boost-chrono == 1.51.0",
  "mico-singlethread == 2.3.13-oblibs1.4snapshot",
  "openbus-idl2.0 == 2.0snapshot",
  "logger-singlethread == 2.0snapshot",
  "scs-idl1.3 == 1.3snapshot",
  "scs-cpp-mico-singlethread == 1.3snapshot",
  "openssl == 1.0.0j",
}
build = {
  type = "bjam",
  src = ".",
  targets = {
     "stage-assistant-demo-hello",
  },
  variables = {
    threading = "single",
    variant = "debug",
    link = { "static" },
    ["-sBOOST_PATH"] = "%directory(boost)%",
    ["-sMICO_LIB_PATH"] = "%directory(mico-singlethread)%/libs",
    ["-sMICO_INCLUDE_PATH"] = "%directory(mico-singlethread)%/include",
    ["-sMICO_IDL_BIN_PATH"] = "\"%directory(mico-singlethread)%/cpp %directory(mico-singlethread)%/idl\"",
    ["-sSCS_IDL_PATH"] = "%directory(scs-idl1.3)%/src",
    ["-sSCS_PATH"] = "%directory(scs-cpp-mico-singlethread)%",
    ["-sLOGGER_PATH"] = "%directory(logger-singlethread)%",
    ["-sOPENBUS_IDL_PATH"] = "%directory(openbus-idl2.0)%/src",
    ["-sOPENSSL_LIB_PATH"] = "%directory(openssl)%",
    ["-sOPENSSL_INCLUDE_PATH"] = "%directory(openssl)%/include",
    BOOST_BUILD_PATH = "%directory(boost)%/tools/build/v2",
    BJAM_SOURCE = "%directory(boost)%/tools/build/v2/engine",
  },
  bjam_opts = {
     "-d+2",
  },
}

name = "scs-java"
version = "1.3snapshot"
url = SVNREPURL .. "/scs/core/java/trunk"
dependencies = {
  "scs-idl1.3-java == "..version,
}
build = {
  type = "maven",
  variables = {
    ["scs.idlpath"] = "%directory(scs-idl1.3)%/src",
	},
  javadoc = true,
}
install_files = {
  ["target/*.jar"]            = "lib",
  ["target/dependency/*.jar"] = "lib",
  ["target/site/apidocs/*"]   = "doc/scs",
  ["docs/tutorial/*.pdf"]     = "doc/tutorial",
}

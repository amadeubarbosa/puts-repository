name = "scs-java"
version = "1.2.1.3"
url = SVNREPURL .. "/scs/core/java/tags/01_02_01_03"
dependencies = {
  "scs-idl1.2 == 1.2.1",
}
build = {
  type = "maven",
  variables = {
    ["scs.idlpath"] = "%directory(scs-idl1.2)%/src",
	},
  javadoc = true,
}
install_files = {
  ["target/*.jar"]            = "lib",
  ["target/dependency/*.jar"] = "lib",
  ["target/site/apidocs/*"]   = "doc/scs",
  ["docs/tutorial/*.pdf"]     = "doc/tutorial",
}

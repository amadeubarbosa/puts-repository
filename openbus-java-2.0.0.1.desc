name = "openbus-java"
version = "2.0.0.1"
url = GITREPURL .. "/openbus/openbus-sdk-java.git;tag=02_00_00_01"
dependencies = { 
  "scs-java == 1.2.1.1",
  "openbus-idl1.5 == 1.5.2-1",
  "openbus-idl2.0 == 2.0.1",
}
build = {
  type = "maven",
  javadoc = true,
  variables = { 
    ["openbus.idlpath"] = INSTALL.TOP.."/idl/v2_0",
    ["openbus.legacy.idlpath"] = INSTALL.TOP.."/idl/v1_05",
  },
}


name = "logger"
version = "1snapshot"
url = SVNREPURL .. "/cpputils/logger/trunk"
build = {
  type = "tecmake",
  src = ".",
  mf = { "config" },
  MacOS = {
    mf = { "config BUILD_DYLIB=Yes" },
  },
  SunOS510 = {
    mf = { "config LD=CC" },
  },
}
build.Darwin = build.MacOS

install_files = {
  ["lib/${TEC_UNAME}/liblogger.so"] = "lib",
}
dev_files = {
  ["lib/${TEC_UNAME}/liblogger.*"] = "lib",
  ["*.h"] = "include/logger",
}